{
  "name": "messageworks",
  "type": "module",
  "version": "0.1.10",
  "description": "MessageWorks is a flexible framework for task orchestration, messaging, and workflow management across distributed systems. Simplify your processes with seamless communication and coordination.",
  "author": "Bahay Labs, LLC",
  "license": "Apache-2.0",
  "keywords": [
    "messaging",
    "message",
    "communication",
    "request-response",
    "workers",
    "asynchronous",
    "events",
    "nodejs",
    "api",
    "queueing",
    "worker-threads",
    "message-broker"
  ],
  "homepage": "https://github.com/bahay-labs/messageworks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahay-labs/messageworks.git"
  },
  "bugs": {
    "url": "https://github.com/bahay-labs/messageworks/issues"
  },
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "browser": "dist/bundle.umd.js",
  "types": "dist/types/index.d.ts",
  "dependencies": {
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "mitt": "^3.0.1",
    "rollup": "^4.27.3",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -c --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
